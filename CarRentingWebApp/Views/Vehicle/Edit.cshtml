@model CarRentingWebApp.ViewModels.Vehicle.EditVehicleViewModel

@{
    ViewData["Title"] = "Edit Vehicle";
}

<style>
    :root {
        --primary-color: #007bff;
        --primary-dark: #0069d9;
        --bg-overlay: rgba(255, 255, 255, 0.95);
        --card-radius: 1rem;
        --transition-speed: 0.3s;
        --font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background: url('/images/abstract-bg.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: var(--font-family);
        margin: 0;
        padding: 0;
    }

    .overlay {
        background-color: var(--bg-overlay);
        min-height: 100vh;
        padding: 2rem;
    }

    /* Container for content at the top */
    .top-center-container {
        margin-top: 2rem;
    }

    .card-custom {
        border: none;
        border-radius: var(--card-radius);
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15);
        background-color: #fff;
        transition: transform var(--transition-speed);
    }

        .card-custom:hover {
            transform: translateY(-5px);
        }

    .card-header-custom {
        background: linear-gradient(135deg, var(--primary-color), #00aaff);
        padding: 2rem;
        color: #fff;
        text-align: center;
    }

        .card-header-custom h2 {
            margin: 0;
            font-size: 2rem;
            font-weight: 600;
        }

        .card-header-custom small {
            display: block;
            margin-top: 0.5rem;
            font-size: 1rem;
            opacity: 0.9;
        }

    .card-body-custom {
        padding: 2rem;
    }

    .form-floating label {
        font-weight: 500;
        opacity: 0.85;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: var(--card-radius);
        transition: border-color var(--transition-speed), box-shadow var(--transition-speed);
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-custom {
        background: linear-gradient(135deg, var(--primary-color), #00aaff);
        border: none;
        color: #fff;
        font-size: 1.1rem;
        border-radius: 0.5rem;
        padding: 0.75rem;
        transition: background var(--transition-speed);
    }

        .btn-custom:hover {
            background: linear-gradient(135deg, var(--primary-dark), #0099e6);
        }
</style>

<div class="overlay">
    <div class="container top-center-container">
        <div class="row">
            <!-- Single Column: Form, centered horizontally using mx-auto -->
            <div class="col-lg-6 col-md-8 mx-auto">
                <div class="card card-custom mb-4">
                    <div class="card-header-custom">
                        <h2>Edit Vehicle</h2>
                        <small>Modify the vehicle details below</small>
                    </div>
                    <div class="card-body-custom">
                        <form asp-action="Edit" method="post">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <!-- Hidden field for Id -->
                            <input asp-for="Id" type="hidden" />

                            <!-- Brand -->
                            <div class="form-floating mb-3">
                                <input asp-for="Brand" class="form-control" placeholder="Brand" />
                                <label asp-for="Brand">Brand</label>
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>

                            <!-- Model -->
                            <div class="form-floating mb-3">
                                <input asp-for="Model" class="form-control" placeholder="Model" />
                                <label asp-for="Model">Model</label>
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>

                            <!-- Year -->
                            <div class="form-floating mb-3">
                                <input asp-for="Year" class="form-control" placeholder="Year" />
                                <label asp-for="Year">Year</label>
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>

                            <!-- Passenger Seats -->
                            <div class="form-floating mb-3">
                                <input asp-for="PassengerSeats" class="form-control" placeholder="Passenger Seats" />
                                <label asp-for="PassengerSeats">Passenger Seats</label>
                                <span asp-validation-for="PassengerSeats" class="text-danger"></span>
                            </div>

                            <!-- Description -->
                            <div class="form-floating mb-3">
                                <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 120px;"></textarea>
                                <label asp-for="Description">Description</label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <!-- Price Per Day -->
                            <div class="form-floating mb-4">
                                <input asp-for="PricePerDay" type="number" step="0.01" class="form-control" placeholder="Price Per Day" />
                                <label asp-for="PricePerDay">Price Per Day</label>
                                <span asp-validation-for="PricePerDay" class="text-danger"></span>
                            </div>

                            <!-- Image URL -->
                            <div class="form-floating mb-4">
                                <input asp-for="ImageUrl" class="form-control" placeholder="Image URL" />
                                <label asp-for="ImageUrl">Image URL</label>
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-custom btn-lg w-100">Update Vehicle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
