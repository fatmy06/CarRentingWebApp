@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!-- Header Section -->
<div class="py-5 text-center" style="background-color: #f8f9fa;">
    <h1>Login to Your Account</h1>
    <p class="lead">Welcome back! Enter your credentials to sign in.</p>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form id="loginForm" asp-action="Login" method="post">
                        <h2 class="h4 mb-4 text-center">Sign In</h2>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" autocomplete="current-password" placeholder="Password" type="password" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button id="loginSubmit" type="submit" class="btn btn-primary btn-lg w-100">
                            Login
                        </button>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    Don't have an account? <a asp-controller="User" asp-action="Create">Register here</a>.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
