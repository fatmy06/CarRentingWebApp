@model CarRentingWebApp.ViewModels.User.UserAdminViewModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="container my-5">
    <h1 class="mb-4 text-center">Delete User</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-warning" role="alert">
                Are you sure you want to delete this user?
            </div>
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Full Name:</strong> @Model.FirstName @Model.LastName</p>
                    <p><strong>EGN:</strong> @Model.EGN</p>
                </div>
            </div>
            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger btn-lg w-100">Delete User</button>
            </form>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
            </div>
        </div>
    </div>
</div>
