@model IEnumerable<CarRentingWebApp.ViewModels.User.UserAdminViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="container my-5">
    <h1 class="mb-4 text-center">User Management</h1>
    <div class="mb-3 text-end">
        <a asp-action="AdminCreateUser" class="btn btn-primary">Add New User</a>
    </div>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Full Name</th>
                <th scope="col">EGN</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                var count = 1;
                foreach (var user in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@user.Email</td>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.EGN</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Delete" asp-controller="User" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
